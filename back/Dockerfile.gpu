# GPU-оптимизированный Dockerfile для SmolVLM Demo
# Использует базовый образ PyTorch с CUDA поддержкой

FROM pytorch/pytorch:2.3.1-cuda12.1-cudnn8-runtime

# Установка рабочей директории
WORKDIR /app

# Установка переменных окружения
ENV PYTHONUNBUFFERED=1 \
    DEBIAN_FRONTEND=noninteractive \
    HF_HOME=/data/hf-cache \
    TRANSFORMERS_CACHE=/data/hf-cache \
    DEVICE=cuda \
    TORCH_DTYPE=bfloat16

# Установка системных зависимостей
RUN apt-get update && apt-get install -y \
    curl \
    git \
    && rm -rf /var/lib/apt/lists/*

# Копирование requirements
COPY back/requirements.txt back/requirements-gpu.txt ./

# Установка Python зависимостей
RUN pip install --no-cache-dir --upgrade pip && \
    pip install --no-cache-dir -r requirements.txt

# Копирование кода приложения
COPY back/app/ ./app/

# Копирование frontend
COPY front/ /app/front/

# Создание директорий для результатов
RUN mkdir -p /app/outputs/chat /app/outputs/ocr

# Открытие порта
EXPOSE 8000

# Проверка здоровья
HEALTHCHECK --interval=30s --timeout=10s --start-period=60s --retries=3 \
    CMD curl -f http://localhost:8000/api/health || exit 1

# Запуск приложения с логированием
CMD ["uvicorn", "app.main:app", "--host", "0.0.0.0", "--port", "8000", "--log-level", "info"]

